@page
@model galerie_projekt.Pages.UploadModel
@{
}
<head>
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
<h1>New file upload</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Upload" class="control-label">File</label>
                <input type="file" asp-for="Upload" class="form-control-file" multiple required />
            </div>
            <div class="form-group form-check">
                <label asp-for="ImageIsPublic" class="form-check-label">Public image</label>
                <input type="checkbox" asp-for="ImageIsPublic" class="form-check-input">
          </div>
            <div class="form-group">
                <input type="submit" value="Upload" class="btn" />
                <a class="btn" asp-page="/Index">Back</a>
            </div>
        </form>
    </div>
</div>
