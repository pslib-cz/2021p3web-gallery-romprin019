@page
@model galerie_projekt.Pages.AllUserImagesModel
@{
}
<head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<h1>List of stored files</h1>

@if (Model.Images.Count > 0)
{
    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Thumbnail</th>
                <th>Name</th>
                <th>Uploaded at</th>
                <th>Uploader</th>
                <th>Public</th>
                <th>Actions</th> 
            </tr>
        </thead>
        <tbody>
            @foreach (var f in Model.Images)
            {
                <tr>
                    <td>
                        <img src="@Url.Page("/Index","Thumbnail", new {filename=f.Id })" class="thumbnail-image" />
                    </td>
                    <td>@f.OriginalName</td>
                    <td>
                        @f.UploadedAt
                    </td>
                    <td>
                        @f.Uploader
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => f.IsPublic)
                    </td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-page-handler="download" asp-route-filename="@f.Id">Download</a>
                    </td>
                    <td>
                        <a asp-page="./ImageEdit" asp-route-id="@f.Id">Edit</a>
                    </td>
                    <td>
                        <a asp-page="./AddToAlbum" asp-route-id="@f.Id">Add to Album</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>There are no files uploaded yet.</p>
}
